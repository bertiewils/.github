{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Bertiewils default preset",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "pinDigests": true
    }
  ],
  "git-submodules": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  }
}
